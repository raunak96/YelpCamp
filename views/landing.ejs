<!DOCTYPE html>
<html>
    <head>
         <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/landing.css"> <!-- LANDING PAGE STYLESHEET -->
        
        <!--MODERNIZR MAKES SURE TO INCLUDE SOME CLASSES IN CASE OUR BROWSER IS OUTDATED-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    </head>
    <body>
    <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">YelpCamp</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="/campgrounds">Home</a></li>
                </ul>
                <div class="collapse navbar-collapse" id="navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        
                    <% if(!currentUser){ %>
                       <li><a href="/login">Login</a></li>
                       <li><a href="/register">Sign Up</a></li>
                    <% } else { %>
                            <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notifications <span class="badge"><%= notifications.length %></span></a>
                              <ul class="dropdown-menu">
                                <li>
                                    <a href="/notifications">View past notifications</a>
                                </li>
                                <% notifications.forEach(function(notification) { %>                          
                                    <li>
                                        <a href="/notifications/<%= notification.id %>">
                                            <%= notification.username %> created a new campground
                                        </a>
                                    </li>
                                <% }); %>
                              </ul>
                            </li>
                            
                            <li>
                            <a class="active" href="/users/<%=currentUser._id%>">Signed In As <%= currentUser.username %></a></li>
                            <li class="dropdown">
                              <a style="padding:0" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img class="img-circle img-responsive"style="height:50px;width:auto;" src="<%=currentUser.avatar %>"
                              onerror="src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPlkwhBse_JCK37_0WA3m_PHUpFncOVLM0s0c4cCqpV27UteuJ'">
                              </a>
                              <ul class="dropdown-menu" style="background:#e0e0d1">
                                <li><a href="/users/<%=currentUser._id%>">View Your Profile</a></li>
                                <li role="separator" class="divider"></li> <!-- Like a hr -->
                                <li><a href="/users/<%=currentUser._id%>/edit">Edit Your Profile</a></li>
                                <li role="separator" class="divider"></li> <!-- Like a hr -->
                                <li><a href="/users/<%=currentUser._id%>/avtr/edit">Edit Your Avatar</a></li>
                                <li role="separator" class="divider"></li> <!-- Like a hr -->
                                <li><a href="/logout">SignOut</a></li>
                              </ul>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        
        </nav>
    
     <div class="container">
            <% if(error && error.length>0) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
            <% }  if(success && success.length>0) { %>
            <div class="alert alert-success" role="alert"><%= success %></div>
            <% } if(fail && fail.length>0) { %>
            <div class="alert alert-warning" role="alert"><%= fail %></div>
            <% } %>
            
        </div>
    
    <div id="landing-header">
 		<h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to YelpCamp!</h1>
 		<hr>
 		<p><h4>View Our handpicked Campgrounds from all over the world</h4></p>
		<a href="/campgrounds" class="btn btn-lg btn-default" style="color:white;background:transparent;font-weight:bold">
		    View All Campgrounds</a>
    </div>
    </div>
    <ul class="slideshow"> <!-- 5 BACKGROUND IMAGES IN li WHICH WILL FADE IN AND OUT IN 5 SEC INTERVAL-->
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>

<% include partials/footer %>