<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a New CampGround</h1>
        <div class="col-md-3 col-xs-1"></div> 
        <div class="col-md-6 col-xs-10"> 
            <form action="/campgrounds" method="post">          <!-- POST DATA TO /CAMPGROUNDS ROUTE -->
                <div class="form-group"> 
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="number" name="price" placeholder="price" min="500" step="500">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Enter some information">
                </div>
                <!--THIS IS A PLACES AUTOCOMPLETE API CDN FROM https://www.algolia.com-->
                <div class ="form-group">
                    <input class="form-control" type="search" id="address-input" name="location" id="location" placeholder="Yosemite National Park, CA">
                    <script>
                      var placesAutocomplete = places({
                        appId: '<%=process.env.APP_ID%>',
                        apiKey: '<%=process.env.API_KEY%>',
                        container: document.querySelector('#address-input')
                      });
                    </script>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button> <!-- btn-block :button takes entire size of block -->
                </div>
            </form>
            <a href="/campgrounds">Go Back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>