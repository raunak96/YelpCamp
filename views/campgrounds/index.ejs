<% include ../partials/header.ejs %>



<div class="container">
    <header class="jumbotron">    <!--HEADER IS SIMILAR TO DIV BUT HERE IT IS MORE MEANINGFUL -->
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>Our Very Own Camp Haven</p>
            <a class="btn btn-success" href="/campgrounds/new">Add New Campgrounds</a>
            <p>
               <form action="/campgrounds" method="GET" class="form-inline">
                   <div class="form-group">
                       <input type="text" name="search" placeholder="Campground search..." class="form-control">
                       <input type="submit" value="Search" class="btn btn-default">
                   </div>
               </form>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% for(var i=0;i<campgrounds.length;i++)
        { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <a href="/campgrounds/<%= campgrounds[i]._id %>">
                        <img src="<%= campgrounds[i].image %>">
                        <div class="caption">
                            <h4><%= campgrounds[i].name %></h4>
                        </div>   
                   </a>
                   <p>
                       <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-info">More Info</a>
                   </p>
                </div>
            </div>
        <% } %>
    </div>
</div>
<% include ../partials/footer.ejs %>